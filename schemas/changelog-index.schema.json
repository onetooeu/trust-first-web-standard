{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ChangelogIndex",
  "type": "object",
  "required": [
    "releases"
  ],
  "properties": {
    "generated_at": {
      "type": "string"
    },
    "releases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "tag",
          "date",
          "notes_url"
        ],
        "properties": {
          "tag": {
            "type": "string"
          },
          "date": {
            "type": "string"
          },
          "notes_url": {
            "type": "string"
          }
        }
      }
    }
  }
}