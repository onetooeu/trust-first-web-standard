{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://onetoo.eu/schemas/release.schema.json",
  "title": "Release Metadata",
  "type": "object",
  "required": ["tag", "generated_at"],
  "properties": {
    "tag": {"type": "string"},
    "generated_at": {"type": "string"},
    "notes": {"type": "string"},
    "artifacts": {
      "type": "object",
      "default": {},
      "additionalProperties": {
        "anyOf": [
          {"type": "string"},
          {
            "type": "object",
            "required": ["path"],
            "properties": {
              "path": {"type": "string"},
              "sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
              "minisig": {"type": "string"}
            },
            "additionalProperties": true
          }
        ]
      }
    }
  },
  "additionalProperties": true
}
