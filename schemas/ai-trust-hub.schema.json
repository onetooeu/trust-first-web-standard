{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://onetoo.eu/schemas/ai-trust-hub.schema.json",
  "title": "ONETOO AI Trust Hub Manifest",
  "type": "object",
  "required": ["manifest", "owner", "domains", "endpoints"],
  "properties": {
    "manifest": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": {"type": "string"},
        "version": {"type": "string"},
        "updated": {"type": "string"}
      },
      "additionalProperties": true
    },
    "owner": {
      "type": "object",
      "required": ["display_name"],
      "properties": {
        "display_name": {"type": "string"},
        "contacts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "value"],
            "properties": {
              "type": {"type": "string"},
              "value": {"type": "string"}
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "domains": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "string"}
    },
    "endpoints": {
      "type": "object",
      "minProperties": 3,
      "additionalProperties": {"type": "string"}
    }
  },
  "additionalProperties": true
}
