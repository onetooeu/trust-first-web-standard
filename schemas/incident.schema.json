{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Incident",
  "type": "object",
  "required": [
    "id",
    "reported_at",
    "severity",
    "status",
    "summary"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "reported_at": {
      "type": "string"
    },
    "last_updated_at": {
      "type": "string"
    },
    "severity": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "critical"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "investigating",
        "identified",
        "monitoring",
        "resolved"
      ]
    },
    "summary": {
      "type": "string"
    },
    "customer_impact": {
      "type": "string"
    },
    "systems_affected": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "at": {
            "type": "string"
          },
          "event": {
            "type": "string"
          }
        },
        "required": [
          "at",
          "event"
        ]
      }
    },
    "mitigation": {
      "type": "string"
    },
    "root_cause": {
      "type": "string"
    },
    "preventive_actions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}